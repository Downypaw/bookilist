{
    "include": [
        "src/**/*",
        "backend/**/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "target": "es2020",
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "jsx": "react-jsx",
        "paths": {
            "@backend/*": ["src/backend/*"],
            "@api/*": ["src/frontend/api/*"],
            "@assets/*": ["src/frontend/assets/*"],
            "@atoms/*": ["src/frontend/shared/atoms/*"],
            "@molecules/*": ["src/frontend/shared/molecules/*"],
            "@organisms/*": ["src/frontend/shared/organisms/*"],
            "@harness/*": ["src/frontend/harness/*"],
            "@models/*": ["src/frontend/models/*"],
            "@pages/*": ["src/frontend/pages/*"],
            "@store/*": ["src/frontend/store/*"],
            "@styles/*": ["src/frontend/styles/*"],
            "@utils/*": ["src/frontend/shared/ytils/*"],
        } 
    }
}